{
  "name": "cli-ts-starter",
  "version": "1.0.0",
  "description": "A simple typescript starter for building CLI application",
  "main": "./dist/index.js",
  "bin": {
    "cli-ts-starter": "./dist/index.js"
  },
  "scripts": {
    "clean": "rimraf ./dist/",
    "build": "npm run clean && tsc",
    "serve": "npm run build && node ./dist/index.js",
    "start": "npm run serve",
    "watch-node": "nodemon ./dist/index.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm:watch-ts\" \"npm:watch-node\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "bundle": "npm run build && npm link"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajayit28/cli-ts-starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ajayit28/cli-ts-starter/issues"
  },
  "homepage": "https://github.com/ajayit28/cli-ts-starter#readme",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.12",
    "@types/superagent": "^4.1.15",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "pkg": "^5.5.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "boxen": "^5.*.*",
    "chai": "^4.3.6",
    "lodash": "^4.17.21",
    "mocha": "^9.2.0",
    "mocha-multi-reporters": "^1.5.1",
    "superagent": "^7.1.1",
    "winston": "^3.4.0",
    "yargs": "^17.3.1"
  }
}
